/*
 * Update the lock flag for a notify list
 *
 * Output: 0 = success
 *         20000 = unknown list
 */
CREATE PROC updateNotifyList ( 
	@notifyID	userIdentifier,
	@locked		bit
)
AS
BEGIN
  DECLARE @lastError	int
  BEGIN TRAN
    UPDATE notifyLists SET locked = @locked WHERE notifyID = @notifyID
    SELECT @lastError = @@error
    IF @lastError != 0
    BEGIN
      ROLLBACK TRAN
      RETURN @lastError
    END
  COMMIT TRAN
END
GO
GRANT EXECUTE ON updateNotifyList TO vpusr
GO
