/*
 * Show activity log for an account, searching by name
 * input:  name
 *         flag, 1 = ascending date/time, 0 = descending
 *         from/to date/time range 
 *         client time zone (output date/time is relative to this TZ)
 *
 *	If both from and to are null, show all.
 *
 * output: Return value - 0 - success 
 *		 	  20000 - can't find account 
 *			  20001 - missing from or to date
 *
 */
CREATE PROC showActivityLogByName ( 
	@who		VPuserID,
	@asc		bit = 1,
	@clientTZ	int = 0,
	@from		VpTime = NULL,
	@to		VpTime = NULL
)
AS
BEGIN

  IF @from IS NULL AND @to IS NULL
  BEGIN

    IF @asc = 1
    BEGIN
      SELECT accountID, dateadd(hour, @clientTZ, time) AS when, comment, who, IP
         FROM activityLog
         WHERE who LIKE @who
         ORDER BY time ASC
    END
    ELSE BEGIN
      SELECT accountID, dateadd(hour, @clientTZ, time) AS when, comment, who, IP
         FROM activityLog
         WHERE who LIKE @who
         ORDER BY time DESC
    END
    RETURN 0
  END

  IF @from IS NULL OR @to IS NULL
  BEGIN
    RETURN 20001
  END

  SELECT @from = dateadd( hour, (-1) * @clientTZ, @from )
  SELECT @to   = dateadd( hour, (-1) * @clientTZ, @to   )


  IF @asc = 1
  BEGIN
     SELECT accountID, dateadd(hour, @clientTZ, time) AS when, comment, who, IP
       FROM activityLog
       WHERE who LIKE @who
       AND   time >= @from
       AND   time <= @to
       ORDER BY time ASC
  END
  ELSE BEGIN
     SELECT accountID, dateadd(hour, @clientTZ, time) AS when, comment, who, IP
       FROM activityLog
       WHERE who LIKE @who
       AND   time >= @from
       AND   time <= @to
       ORDER BY time DESC
  END

END
GO
